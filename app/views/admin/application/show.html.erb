<% content_for(:title) { t("administrate.actions.show_resource", name: page.page_title) } %>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header card-header-primary d-flex flex-row justify-content-between align-items-center" role="banner">
        <h4 class="card-title"><%= content_for(:title) %></h4>
        <div>
          <%= link_to t("administrate.actions.edit_resource", name: page.page_title), [:edit, namespace, page.resource], :class => "text-light nav-link" if valid_action?(:edit) && show_action?(:edit, page.resource) %>
        </div>
      </div>
      <div class="card-body">
        <dl class="row">
          <% page.attributes.each do |attribute| %>
            <dt class="attribute-label col-sm-3" id="<%= attribute.name %>">
              <%= t("helpers.label.#{resource_name}.#{attribute.name}", default: attribute.name.titleize) %>
            </dt>
            <dd class="col-sm-9 attribute-data attribute-data--<%=attribute.html_class%>">
              <%= render_field attribute, page: page %>
            </dd>
          <% end %>
        </dl>
      </div>
    </div>
  </div>
</div>
